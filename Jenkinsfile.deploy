                        sleep 20
                    fi
                done
                """
            }
        } */

        stage('Validate Kubernetes Cluster') {
            steps {
                sh """
                export AWS_DEFAULT_REGION=${AWS_REGION}
                export KOPS_STATE_STORE=${KOPS_STATE_STORE}
                export NAME=${CLUSTER_NAME}

                echo "ğŸ”§ Validating existing Kubernetes cluster: \${NAME}"
                kops export kubeconfig --name=\${NAME} --state=\${KOPS_STATE_STORE}
                kops validate cluster --name=\${NAME} --state=\${KOPS_STATE_STORE} --wait 10m
                """
            }
        }

        stage('Deploy Application with Helm') {
            steps {
                sh """
                echo "ğŸ§¹ Cleaning up previous Helm release..."
                helm uninstall python-app 2>/dev/null || true

                echo "ğŸš€ Deploying Helm chart..."
                helm upgrade --install python-app ${HELM_CHART_PATH} \\
                    --set image.repository=${IMAGE_NAME} \\
                    --set image.tag=${IMAGE_TAG} \\
                    --wait \\
                    --timeout 10m \\
                    --atomic \\
                    --debug
                """
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    sh """
                    echo "ğŸ” Checking rollout status..."
                    kubectl rollout status deployment/pythonapp --timeout=300s || echo "âš ï¸ Rollout failed."

                    echo "ğŸ” Describe deployment:"
                    kubectl describe deployment pythonapp || true

                    echo "ğŸ³ Describe pods:"
                    kubectl get pods -o wide
                    kubectl describe pod -l app.kubernetes.io/name=pythonapp || true

                    echo "ğŸ“ Logs from the pod:"
                    kubectl logs -l app.kubernetes.io/name=pythonapp --tail=50 || true

                    echo "ğŸŒ Application endpoint (if using LoadBalancer):"
                    kubectl get svc python-app -o jsonpath='{.status.loadBalancer.ingress[0].hostname}' || echo "âš ï¸ Not using LoadBalancer"
                    """
                }
            }
        }
    }

    post {
        success {
            echo "âœ… Cluster created and application deployed successfully!"
        }
        failure {
            echo "âŒ Pipeline failed. Check logs for issues."
            // Uncomment if you still want automatic cleanup:
            // sh "kops delete cluster --name=${CLUSTER_NAME} --yes || true"
        }
    }
}
